<form action="/update/{{user.id}}" method="POST">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">First Name</label>
            <input name="firstname" type="text" class="form-control" id="inputEmail4" value="{{user.firstname}}">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Last Name</label>
            <input name="lastname" type="text" class="form-control" id="inputEmail4" value="{{user.lastname}}">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input name="email" type="email" class="form-control" id="inputEmail4" value="{{user.email}}">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="inputAddress">Country</label>
            <input name="country" type="text" class="form-control" id="inputAddress" value="{{user.country}}">
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Age</label>
            <input name="age" type="text" class="form-control" id="inputZip" value="{{user.age}}">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>